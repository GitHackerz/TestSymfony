{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
    <form action="{{ path('book_search') }}" method="post">
        Search: <input name="title" type="text" placeholder="search">
        <button type="submit">Search</button>
    </form>
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Category</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.category }}</td>
                <td>
                    {% if book.published %}
                        {{ book.publicationDate|date('Y-m-d') }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    {#                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No books found</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
